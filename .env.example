# Supabase Configuration - REPLACE WITH YOUR ACTUAL VALUES
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Anthropic (Claude) API - GET FROM https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# Application Settings
NODE_ENV=development
API_URL=http://localhost:3000
SITE_URL=http://localhost:3000
NUXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NUXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# JWT Secret for auth - GENERATE WITH: openssl rand -hex 32
JWT_SECRET=generate_a_secure_random_string_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for production rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Google PageSpeed API (optional)
GOOGLE_PAGESPEED_API_KEY=your_pagespeed_api_key_here

# Production Settings (uncomment for production)
# NODE_ENV=production
# API_URL=https://api.yourdomain.com
# SITE_URL=https://yourdomain.com
